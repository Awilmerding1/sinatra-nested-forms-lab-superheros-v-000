	  <body>
	    <h1>Create a Team and Heroes!</h1>
	    <form method="POST" action="/teams">
	      <p>Team Name: <input id="team_name" type="text" name="team[name]"></p>
        <p>Team Motto: <input id="team_motto" type="text" name="team[motto]"></p>

	      <h2>Hero 1</h2>
	      <p>Hero's Name: <input type="text" id="member1_name" name="team[members][0][name]">
	      </p>
	      <p>Hero's Power: <input type="text" id="member1_power" name="team[members][0][power]">
	      </p>
	      <p>Hero's Biography: <input type="text" id="member1_bio" name="team[members][0][bio]">
	      </p>
	       <h2>Hero 2</h2>
	      <p>Hero's Name: <input type="text" id="member2_name" name="team[members][1][name]">
	      </p>
	      <p>Hero's Power: <input type="text" id="member2_power" name="team[members][1][power]">
	      </p>
	      <p>Hero's Biography: <input type="text" id="member2_bio" name="team[members][1][bio]">
	      </p>
	       <h2>Hero 3</h2>
	      <p>Hero's Name: <input type="text" id="member3_name" name="team[members][2][name]">
	      </p>
	      <p>Hero's Power: <input type="text" id="member3_power" name="team[members][2][power]">
	      </p>
	      <p>Hero's Biography: <input type="text" id="member3_bio" name="team[members][2][bio]">
	      </p>
